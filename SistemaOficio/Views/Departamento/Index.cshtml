@model IEnumerable<OfiGest.Models.DepartamentoModel>
@{
    ViewData["Title"] = "Listado de Departamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var rol = Context.Session.GetString("RolUsuario");
}




<div class="container-fluid d-flex flex-column compact-container">
    <h4 class="mt-3 mb-3">Listado de Departamentos</h4>

    <div class="card shadow-sm border-0 p-4 card-adjusted">
        <div class="search-box">
            <i class="bi bi-search" style="font-size: 1.2rem;"></i>
            <input type="text" id="searchInput" placeholder="Buscar por Encargado, Departamento o Iniciales" />
        </div>

        <div class="d-flex justify-content-between align-items-center mb-2">
            <small id="contadorDepartamentos" class="text-muted">Departamentos visibles: @Model.Count()</small>
        </div>

        <div class="table-wrapper mb-3">
            <table id="tablaDepartamentos" class="table table-bordered table-striped align-middle mb-0">
                <thead>
                    <tr>
                        <th>Iniciales</th>
                        <th>Departamento</th>
                        <th>Encargado</th>
                        <th>Descripción</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var depto in Model)
                    {
                        <tr>
                            <td>@depto.Iniciales</td>
                            <td>@depto.Nombre</td>
                            <td>@depto.NombreEncargado</td>
                            <td>@depto.Descripcion</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    @if (rol == "Administrador")
                                    {
                                        <a asp-action="Edit" asp-route-id="@depto.Id" class="btn-opret-sm" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <button type="button" class="btn-opretEliminar-sm" onclick="deleteItem(@depto.Id)" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    }
                                    else if (rol == "Usuario")
                                    {
                                        <button class="btn-opret-sm" type="button" data-bs-toggle="modal" data-bs-target="#modalDivisiones-@depto.Id" title="Divisiones del departamento">
                                            <i class="bi bi-diagram-3"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="noResults" class="text-muted text-center mt-2" style="display:none;">
                No se encontraron departamentos que coincidan con la búsqueda.
            </div>
        </div>

        @if (rol == "Usuario")
        {
            foreach (var depto in Model)
            {
                <div class="modal fade" id="modalDivisiones-@depto.Id" tabindex="-1" aria-labelledby="modalLabel-@depto.Id" aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header" style="background-color: #2f5c91; color:white">
                                <h5 class="modal-title" id="modalLabel-@depto.Id">Divisiones de @depto.Nombre (@depto.Iniciales)</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <div class="modal-body">
                                @if (depto.Divisiones != null && depto.Divisiones.Any())
                                {
                                    <div class="divisiones-scroll">
                                        <table class="table table-bordered table-striped align-middle mb-0">
                                            <thead>
                                                <tr>
                                                    <th style="width: 40%;">División</th>
                                                    <th style="width: 60%;">Descripción</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var div in depto.Divisiones)
                                                {
                                                    <tr>
                                                        <td style="width: 40%;">@div.Nombre</td>
                                                        <td style="width: 60%;">@div.Descripcion</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted">Este departamento no tiene divisiones registradas.</div>
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

        @if (rol == "Administrador")
        {
            <div class="mt-auto">
                <a asp-action="Create" class="btn btn-azul d-flex justify-content-center align-items-center gap-2 w-100">
                    CREAR DEPARTAMENTO
                </a>
            </div>
        }
        else
        {
            <div class="mt-auto" style="height: 10px;"></div>
        }
    </div>
</div>

@section Scripts {
    

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const successMessage = '@Html.Raw(TempData["Success"]?.ToString())';
            const errorMessage = '@Html.Raw(TempData["Error"]?.ToString())';

                   if (successMessage) {
            Swal.fire({
                title: "¡Módulo Departamentos!",
                text: successMessage,
                icon: "success",
                timer: 2000,
                showConfirmButton: false,
                timerProgressBar: true
            });
        } else if (errorMessage) {
            Swal.fire({
                title: "¡Módulo Departamentos!",
                text: errorMessage,
                icon: "error",
                confirmButtonText: "Entendido",
                confirmButtonColor: "#3D6FAD"
            });
        }
         const input = document.getElementById("searchInput");
            if (input) {
                document.getElementById("searchInput").addEventListener("input", function () {
                filtrarTablaPorColumnas("searchInput", "tablaDepartamentos", [0, 1, 2]);
                });
            }
        });


        function filtrarTablaPorColumnas(inputId, tablaId, columnas) {
            const filtro = document.getElementById(inputId)?.value.toLowerCase();
            const filas = document.querySelectorAll(`#${tablaId} tbody tr`);
            let visibles = 0;

            filas.forEach(fila => {
                const coincide = columnas.some(index => {
                    const texto = fila.children[index]?.textContent.toLowerCase() || "";
                    return texto.includes(filtro);
                });
                fila.style.display = coincide ? "" : "none";
                if (coincide) visibles++;
            });

            const mensaje = document.getElementById("noResults");
            if (mensaje) {
                mensaje.style.display = visibles === 0 ? "block" : "none";
            }

            const contador = document.getElementById("contadorDepartamentos");
            if (contador) {
                contador.textContent = `Departamentos visibles: ${visibles}`;
            }
        }


        function deleteItem(departamentoId) {
            Swal.fire({
                title: "¿Estás seguro?",
                text: "¡Una vez eliminado, no podrás recuperar este Departamento!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Sí, eliminar",
                cancelButtonText: "Cancelar",
                confirmButtonColor: "#F20505",
                cancelButtonColor: "#3D6FAD"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Delete", "Departamento")' + '?id=' + departamentoId;
                }
            });
        }
    </script>
}