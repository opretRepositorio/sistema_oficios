@model IEnumerable<OfiGest.Models.TipoOficioModel>
@{
    ViewData["Title"] = "Tipos de Oficios";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var rolUsuario = Context.Session.GetString("RolUsuario");
}

<style>

    .btn-opret-sm {
        background-color: #3D6FAD;
        color: white;
        border: 1px solid #000000;
        padding: 4px 8px;
        font-size: 13px;
        font-weight: 600;
        border-radius: 4px;
        transition: background-color 0.2s ease, color 0.2s ease;
    }

        .btn-opret-sm:hover {
            background-color: #2f5c91;
            color: #ffffff;
        }

    .btn-opretEliminar-sm {
        background-color: #F20505;
        color: white;
        border: 1px solid #000000;
        padding: 4px 8px;
        font-size: 13px;
        font-weight: 600;
        border-radius: 4px;
        transition: background-color 0.2s ease, color 0.2s ease;
    }

        .btn-opretEliminar-sm:hover {
            background-color: #F20505;
            color: #ffffff;
        }

    .btn-azul {
        background-color: #3D6FAD;
        color: white;
        width: 100%;
        padding: 0.75rem;
        font-weight: bold;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .btn-azul:hover {
            background-color: #2f5c91;
            color: white;
        }

    .search-box {
        border: 1px solid black;
        border-radius: 8px;
        padding: 0.5rem 1rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background-color: white;
    }

        .search-box input {
            border: none;
            outline: none;
            flex: 1;
        }

    .table-wrapper {
        max-height: auto;
        overflow-y: auto;
        border: 1px solid #dee2e6;
        border-radius: 6px;
    }

        .table-wrapper table {
            width: 100%;
            border-collapse: collapse;
        }

        .table-wrapper thead th {
            position: sticky;
            top: 0;
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            z-index: 2;
        }

        .table-wrapper td {
            border: 1px solid #dee2e6;
            word-break: break-word;
            white-space: normal;
            vertical-align: top;
            padding: 0.5rem;
        }

            .table-wrapper td:empty {
                background-color: #f8f9fa;
            }

    .card-adjusted {
        height: 700px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        margin-top: 1rem;
        margin-bottom: 2rem;
        padding: 2rem;
    }
</style>


<div class="container-fluid d-flex flex-column compact-container">
    <h4 class="mt-3 mb-3">Tipos de Oficios</h4>

    <div class="card shadow-sm border-0 p-4 card-adjusted">
        <div class="search-box">
            <i class="bi bi-search" style="font-size: 1.2rem;"></i>
            <input type="text" id="searchInput" placeholder="Buscar por iniciales o nombre" />
        </div>

        <div class="d-flex justify-content-between align-items-center mb-2">
            <small id="contadorOficios" class="text-muted">Tipos de oficio visibles: @Model.Count()</small>
        </div>

        <div class="table-wrapper mb-3">
            <table id="tablaOficios" class="table table-bordered table-striped align-middle mb-0">
                <thead>
                    <tr>
                        <th>Iniciales</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var depto in Model)
                    {
                        <tr>
                            <td>@depto.Iniciales</td>
                            <td>@depto.Nombre</td>
                            <td>@depto.Descripcion</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    @if (rolUsuario == "Administrador")
                                    {
                                        <a asp-action="Edit" asp-route-id="@depto.Id" class="btn-opret-sm" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <button type="button" class="btn-opretEliminar-sm" onclick="deleteItem(@depto.Id)" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    }  @if (rolUsuario == "Usuario")
                                    {
                                        <button type="button" class="btn-opret-sm" onclick="showInformativeAlert()" title="Solo informativo">
                                            <i class="bi bi-info-circle"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="noResults" class="text-muted text-center mt-2" style="display:none;">
                No se encontraron tipos de oficio que coincidan con la búsqueda.
            </div>
        </div>

        @if (rolUsuario == "Administrador")
        {
            <div class="mt-auto">
                <a asp-action="Create" class="btn btn-azul d-flex justify-content-center align-items-center gap-2 w-100">
                    CREAR TIPO DE OFICIO
                </a>
            </div>
        }
        else
        {
            <div class="mt-auto" style="height: 10px;"></div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const successMessage = '@Html.Raw(TempData["Success"]?.ToString())';
            const errorMessage = '@Html.Raw(TempData["Error"]?.ToString())';

         
             if (successMessage) {
            Swal.fire({
                title: "¡Módulo Tipos de oficio!",
                text: successMessage,
                icon: "success",
                timer: 2000,
                showConfirmButton: false,
                timerProgressBar: true
            });
        }
            else if (errorMessage) {
                Swal.fire({
                    title: "¡Módulo Tipos de oficio!",
                    text: errorMessage,
                    icon: "error",
                    confirmButtonText: "Entendido",
                    confirmButtonColor: "#3D6FAD"
                });
            }

            const input = document.getElementById("searchInput");
            if (input) {
                input.addEventListener("input", function () {
                    filtrarTablaPorColumnas("searchInput", "tablaOficios", [0, 1]);
                });
            }
        });

        function filtrarTablaPorColumnas(inputId, tablaId, columnas) {
            const filtro = document.getElementById(inputId)?.value.toLowerCase();
            const filas = document.querySelectorAll(`#${tablaId} tbody tr`);
            let visibles = 0;

            filas.forEach(fila => {
                const coincide = columnas.some(index => {
                    const texto = fila.children[index]?.textContent.toLowerCase() || "";
                    return texto.includes(filtro);
                });
                fila.style.display = coincide ? "" : "none";
                if (coincide) visibles++;
            });

            const mensaje = document.getElementById("noResults");
            if (mensaje) {
                mensaje.style.display = visibles === 0 ? "block" : "none";
            }

            const contador = document.getElementById("contadorOficios");
            if (contador) {
                contador.textContent = `Tipos de oficio visibles: ${visibles}`;
            }
        }

        function deleteItem(tipoOficioId) {
            Swal.fire({
                title: "¿Estás seguro?",
                text: "¡Una vez eliminado, no podrás recuperar este tipo de oficio!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Sí, eliminar",
                cancelButtonText: "Cancelar",
                confirmButtonColor: "#F20505",
                cancelButtonColor: "#3D6FAD"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Delete", "TipoOficio")' + '?id=' + tipoOficioId;
                }
            });
        }

     function showInformativeAlert() {
            Swal.fire({
                title: '<span style="font-size: 1.4rem; font-weight: bold;">¿Para qué se utiliza cada tipo de oficio?</span>',
                html: `
                    <div style="text-align: justify; font-size: 1.3rem;">
                        Los tipos de oficio definen la naturaleza institucional de cada comunicación formal, ayudan a clasificar, auditar y dar trazabilidad a los procesos administrativos.
                    </div>
                `,
                   icon: "warning",
                confirmButtonText: "Entendido",
                confirmButtonColor: "#3D6FAD"
            });
        }
    </script>
}